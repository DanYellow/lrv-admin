{% if item.image %}
    <a href="#" class="easyadmin-thumbnail" data-featherlight="#easyadmin-lightbox-{{ item.image.id }}" data-featherlight-close-on-click="anywhere">
        {# the second parameter is the name of the property with the UploadableField annotation #}
        <img width="70" src="{{ vich_uploader_asset(item.image, 'imageFile') }}">
    </a>

    <div id="easyadmin-lightbox-{{ item.image.id }}" class="easyadmin-lightbox">
        {# the second parameter is the name of the property with the UploadableField annotation #}
        <img src="{{ vich_uploader_asset(item.image, 'imageFile') }}">
    </div>
{% endif %}